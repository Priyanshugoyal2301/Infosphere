# Environment Configuration
DEBUG=True
ENVIRONMENT=development

# News API Keys (Get from respective websites)
NEWSAPI_KEY=your_newsapi_key_here
GNEWS_API_KEY=your_gnews_key_here
NEWSDATA_API_KEY=your_newsdata_key_here

# Database Configuration
DATABASE_URL=postgresql://infosphere_user:infosphere_password@localhost:5432/infosphere_db
TEST_DATABASE_URL=postgresql://infosphere_user:infosphere_password@localhost:5432/infosphere_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# News Cache Settings
NEWS_CACHE_DURATION=120

# ML Models Configuration
MODEL_CACHE_DIR=./ml_core/models
MAX_FILE_SIZE_MB=50
SUPPORTED_IMAGE_FORMATS=[".jpg", ".jpeg", ".png", ".bmp"]
SUPPORTED_VIDEO_FORMATS=[".mp4", ".avi", ".mov", ".webm"]

# Deepfake Detection
MIE_MODEL_PATH=./ml_core/models/mie_model.onnx
MIE_THRESHOLD=0.8
FACE_DETECTION_CONFIDENCE=0.7

# CIT Routing
CIT_MODEL_PATH=./ml_core/models/cit_model
CIT_CATEGORIES=["Water", "Road", "Garbage", "Security"]

# Policy Sensemaking
POLICY_MODEL_PATH=./ml_core/models/policy_model
SENTIMENT_UPDATE_INTERVAL=300  # seconds